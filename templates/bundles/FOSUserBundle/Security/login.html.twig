{% extends 'login/base.html.twig' %}
{% block title %}{{'authorization'|trans}} {% endblock title %}
{% block body %}
    <section id="wrapper" class="login-register">
        <div class="login-box">
            <div class="white-box">
              <form class="form-horizontal form-material" id="loginform" action="{{ path("fos_user_security_check") }}"  method="post">
                    <h3 class="box-title m-b-20">{{'authorization'|trans}}</h3>
                       {% if error %}
                        <div class="alert alert-danger" role="alert">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                        {% endif %}
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans }}">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup"  name="_remember_me" value="on" type="checkbox">
                                <label for="checkbox-signup" style="padding-left:10px;"> {{ 'security.login.remember_me'|trans }}</label>
                            </div>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Забыл пароль?</a> </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <input class="btn btn-info text-uppercase" type="submit" name="_submit" value="{{ 'security.login.submit'|trans }}"> 
                        </div>
                    </div>

                    <div class="form-group m-b-0">
                        <div class="col-sm-12 text-center">
                            <p>Нет аккаунта?<br><a href="{{path('fos_user_registration_register')}}" class="text-primary m-l-5"><b>{{ 'registration'|trans }}</b></a> или <a href="{{path('default')}}" class="text-primary m-l-5"><b>Вернуться на сайт</b></a></p>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>
                </form>

                <form class="form-horizontal" id="recoverform" action="index.html">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Сбросить</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
{% endblock %}
