{% extends 'base.html.twig' %}
{% block title %}{{'users'|trans}}
{% endblock %}
{% block body %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="{{ path('users.list') }}">{{'users'|trans}}</a></li>
        <li class="breadcrumb-item active">{{'user'|trans}} {{user.username}}</li>
      </ol>
    </nav>
    <h2 class="mb-4">{{'user.editing'|trans}} </h2>
    {{form_start(form)}}
    {{form_widget(form)}}
    <div class="form-group">
        <button type="submit" class="btn btn-success btn-outline pull-right">{{'edit'|trans}}</button>
    </div>
    {{form_end(form)}}
{% endblock %}
